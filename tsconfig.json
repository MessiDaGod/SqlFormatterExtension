            "ES2020"
        ],
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "ignoreDeprecations": "6.0"
    },
    "include": [
        "src"
    ]
